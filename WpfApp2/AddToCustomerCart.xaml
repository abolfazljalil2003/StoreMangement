<Window x:Class="WpfApp2.AddToCustomerCart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="AddToCustomerCart" Height="300" Width="600" Background="#FF00FFFA" >
    <Grid>
        <StackPanel>
            <DataGrid Margin="5" Name="CustomersProduct"  ColumnWidth="*" CanUserAddRows="False" MinColumnWidth="100" CanUserResizeColumns="True" SelectionChanged="CustomersProduct_SelectionChanged" >

            </DataGrid>
            <DockPanel Margin="10,120" HorizontalAlignment="Right" >
                <Button Margin="10" Height="30" Width="100" Name="BtCancelAddtocustomer" Click="BtCancelAddtocustomer_Click" Background="Red">Cancel</Button>
                <Button Margin="10" Height="30" Width="100" Name="BtOkayAddtocustomer" Click="BtOkayAddtocustomer_Click" Background="Green">Ok</Button>


            </DockPanel>
        </StackPanel>
        
    </Grid>
</Window>
